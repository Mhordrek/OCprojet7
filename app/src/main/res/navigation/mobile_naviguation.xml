<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/naviguation"
    app:startDestination="@id/loginFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.go4lunch.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/RestaurantListFragment"
        android:name="com.example.go4lunch.ui.restaurantList.RestaurantListFragment"
        android:label="fragment_list_view"
        tools:layout="@layout/fragment_list_restaurant" />
    <fragment
        android:id="@+id/mapViewFragment"
        android:name="com.example.go4lunch.ui.mapView.MapViewFragment"
        android:label="fragment_map_view"
        tools:layout="@layout/fragment_map_view" />
    <fragment
        android:id="@+id/workmatesFragment"
        android:name="com.example.go4lunch.ui.workmatesList.WorkmatesListFragment"
        android:label="fragment_workmates"
        tools:layout="@layout/fragment_workmates" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.go4lunch.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.go4lunch.ui.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_mapViewFragment"
            app:destination="@id/mapViewFragment" />
        <action
            android:id="@+id/action_mainFragment_to_RestaurantListFragment"
            app:destination="@id/RestaurantListFragment" />
        <action
            android:id="@+id/action_mainFragment_to_workmatesFragment"
            app:destination="@id/workmatesFragment" />
    </fragment>
</navigation>